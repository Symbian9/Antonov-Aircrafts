<?xml version="1.0"?>

<PropertyList>

	<path>effect.ac</path>

	
<!-- ******************************************************************* -->
<!-- Condensation        from F35B                                               -->
<!-- ******************************************************************* -->

	<!-- shock waves -->
<effect>
 <inherits-from>Effects/model-transparent</inherits-from>
<object-name>FlameModel</object-name>
</effect>
  
	<animation>
      <type>select</type>
      <object-name>ShockWave</object-name>
      <condition>
         <and>
            <less-than>
                  <property>/velocities/mach</property>
                  <value>1.03</value>
               </less-than>
               <greater-than>
                  <property>/velocities/mach</property>
                  <value>0.87</value>
            </greater-than>
	    <less-than>
               <property>/position/altitude-ft</property>
               <value>32000.0</value>
            </less-than>
         </and>
      </condition>
	  
	    <attach>world</attach>

  <placer>
   <type>point</type>
  </placer>
   </animation>

   

</PropertyList>
