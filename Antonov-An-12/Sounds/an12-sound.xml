<?xml version="1.0" encoding="UTF-8" ?>
 
<PropertyList>

  <fx>

  <!-- Engines 1 -4 starting up-->
    <crank>
      <name>engstart1</name>
      <path>Aircraft/Antonov-An-12/Sounds/starter.wav</path>      
      <volume>
        <offset>-0.3</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </crank>
    
    <crank>
      <name>engstart2</name>
      <path>Aircraft/Antonov-An-12/Sounds/starter.wav</path>      
      <volume>
        <offset>-0.3</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>15</delay-sec>
    </crank>
    
    <crank>
      <name>engstart3</name>
      <path>Aircraft/Antonov-An-12/Sounds/starter.wav</path>      
      <volume>
        <offset>-0.3</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>30</delay-sec>
    </crank>
    
    <crank>
      <name>engstart4</name>
      <path>Aircraft/Antonov-An-12/Sounds/starter.wav</path>      
      <volume>
        <offset>-0.3</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>45</delay-sec>
    </crank>
  
  <!-- Engines 1 -4 running -->

    <engine>
       <name>engine0</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/running.wav</path>      
           
      <volume>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.0008</factor>
        <min>0.0</min>
        <max>0.5</max>
        <offset>0.0</offset>
      </volume>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.0004</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <engine>
       <name>engine1</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/running.wav</path>      
          
      <volume>
        <property>/engines/engine[1]/rpm</property>
        <factor>0.0008</factor>
        <min>0.0</min>
        <max>0.5</max>
        <offset>0.0</offset>
      </volume>
      <pitch>
        <property>/engines/engine[1]/rpm</property>
        <factor>0.0004</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>34</delay-sec>
    </engine>
    
    <engine>
       <name>engine2</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/running.wav</path>      
         
      <volume>
        <property>/engines/engine[2]/rpm</property>
        <factor>0.0008</factor>
        <min>0.0</min>
        <max>0.5</max>
        <offset>0.0</offset>
      </volume>
      <pitch>
        <property>/engines/engine[2]/rpm</property>
        <factor>0.0004</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>51</delay-sec>
    </engine>
    
    <engine>
       <name>engine3</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/running.wav</path>      
        
      <volume>
        <property>/engines/engine[3]/rpm</property>
        <factor>0.0008</factor>
        <min>0.0</min>
        <max>0.5</max>
        <offset>0.0</offset>
      </volume>
      <pitch>
        <property>/engines/engine[3]/rpm</property>
        <factor>0.0004</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>68</delay-sec>
    </engine>
      

    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/rumble.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <type>log</type>
        <factor>0.25</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </rumble>

    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-12/Sounds/gear.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </gear>

    <gear>
     <name>gear-lock</name>
     <path>Aircraft/Antonov-An-12/Sounds/gear-lck.wav</path>
     <condition>
       <greater-than>
         <property>/gear/gear[0]/position-norm</property>
         <value>0.96</value>
       </greater-than>
     </condition>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </gear>

    <squeal>
      <name>squeal1</name>
      <mode>once</mode>
      <path>Aircraft/Antonov-An-12/Sounds/squeal.wav</path>
      <condition>        
          <property>/gear/gear[0]/wow</property>                 
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
	<min>0.7</min>
        <max>1.0</max>
      </volume>      
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>0.5</offset>
	<min>0.9</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </squeal>
    
    <squeal>
      <name>squeal2</name>
      <mode>once</mode>
      <path>Aircraft/Antonov-An-12/Sounds/squeal.wav</path>
      <condition>        
          <property>/gear/gear[3]/wow</property>          
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.9</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
	<min>0.7</min>
        <max>1.0</max>
      </volume>      
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>0.5</offset>
	<min>0.9</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </squeal>
 
    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-12/Sounds/flaps.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>
        <factor>0.25</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </flap>

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/wind.wav</path>
      <property>/velocities/airspeed-kt</property>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <min>0.00</min>
        <max>0.25</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>0.4</offset>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </wind>
 
    <stall>
      <name>stall</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/stall.wav</path>
      <property>/sim/alarms/stall-warning</property>
      <volume>
        <property>/sim/alarms/stall-warning</property>
        <max>1.0</max>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </stall>
  
    <door>
      <name>Crew doorT</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-12/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.09</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Crew door</name>
      <path>Aircraft/Antonov-An-12/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>

    <door>
      <name>Passenger doorT</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-12/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.09</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Passenger door</name>
      <path>Aircraft/Antonov-An-12/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>

    <rain>
      <name>rain</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/rain_canopy.wav</path>
      <condition>
        <greater-than>
          <property>/environment/metar/rain-norm</property>
          <value>0.2</value>
        </greater-than>
      </condition>
      <volume>
        <property>/environment/metar/rain-norm</property>
        <factor>1.00</factor>
        <offset>0.00</offset>
        <min>0.4</min>
        <max>0.9</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.001</factor>
        <offset>1.0</offset>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </rain>
 
 <!-- Warnings -->
 
    <speedwarn>
      <name>warn1</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-12/Sounds/dinamik_pr2.wav</path>
       <condition>
        <greater-than>
	 <property>velocities/groundspeed-kt</property>
	 <value>415</value>
         </greater-than>
        </condition> 
      <volume>
	<offset>1.0</offset>
	<min>1.0</min>
        <max>1.0</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </speedwarn>

  </fx>

</PropertyList>
