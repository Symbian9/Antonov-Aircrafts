<PropertyList>
 <path>fuel1_R1.ac</path>

 <!--sum of tank 1+2 content in kg, small needle -->
 
 <animation>
  <type>rotate</type>
  <object-name>fr2</object-name>
  <property>consumables/fuel/tank[1]/level-kg</property>
  <interpolation>
   <entry><ind>  0.0</ind><dep>/0</dep></entry> 
   <entry><ind> 12500</ind><dep>  246</dep></entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 <!--fuel flow in gallons per hour for tank 2, big needle -->
 
 <animation>
  <type>rotate</type>
  <object-name>fr1</object-name>
  <property>engines/engine[1]/fuel-flow-gph</property>
  <interpolation>
    <entry><ind>  0.0</ind><dep>  0   </dep></entry>
    <entry><ind> 220</ind><dep> 90</dep></entry>
    <entry><ind> 470</ind><dep> 205</dep></entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 
 <animation>
  <type>pick</type> 
  <object-name>k1</object-name> 
- <action>
  <button>3</button> 
  <repeatable>true/</repeatable> 
  <interval-sec>0.2</interval-sec>
- <binding>
  <command>property-adjust</command> 
  <property>instrumentation/R1_fuel/k1</property>
  <step>100</step>
  <min>0</min>
  <max>25000</max> 
   </binding>
  </action>
  </animation>
  
   <animation>
  <type>pick</type> 
  <object-name>k1</object-name> 
- <action>
  <button>4</button> 
  <repeatable>true/</repeatable> 
  <interval-sec>0.2</interval-sec>
- <binding>
  <command>property-adjust</command> 
  <property>instrumentation/R1_fuel/k1</property>
  <step>-100</step>
  <min>0</min>
  <max>25000</max> 
   </binding>
  </action>
  </animation>

 
 
 
               <!--Lights-->
                                   
 <animation>
   <type>material</type>
   <object-name>group</object-name>
   <emission>
	<red-prop>instrumentation/lights/centr_panel/int-red</red-prop>
    <green-prop>instrumentation/lights/centr_panel/int-green</green-prop>
    <blue-prop>instrumentation/lights/centr_panel/int-blue</blue-prop>
	</emission>
</animation>

<animation>
   <type>material</type>
   <object-name>rect1</object-name>
   <emission>
	<red-prop>instrumentation/lights/centr_panel/int-red</red-prop>
    <green-prop>instrumentation/lights/centr_panel/int-green</green-prop>
    <blue-prop>instrumentation/lights/centr_panel/int-blue</blue-prop>
	</emission>
</animation>

<animation>
   <type>material</type>
   <object-name>rect2</object-name>
   <emission>
	<red-prop>instrumentation/lights/centr_panel/int-red</red-prop>
    <green-prop>instrumentation/lights/centr_panel/int-green</green-prop>
    <blue-prop>instrumentation/lights/centr_panel/int-blue</blue-prop>
	</emission>
</animation>


 </PropertyList>

