<!-- Variometer
3D instrument for Tu-154 -->

<PropertyList>

<path>uvpd.ac</path>


<!-- Internal instruments lighting -->

<animation> 
  <object-name>Circle</object-name>
  <object-name>Circle.002</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>
  <object-name>bezel</object-name>  
</animation>

  <!-- working for Rembrandt -->
 
  <animation>
    <type>material</type>
     <object-name>Circle</object-name>
     <object-name>Circle.002</object-name>
     <object-name>needle_1</object-name>
     <object-name>needle_2</object-name>
     <object-name>bezel</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>




<!--Needles-->

<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>instrumentation/uvpd/altitude</property>
    <interpolation>
  	<entry><ind>	0</ind>		<dep>	0</dep></entry>
	<entry><ind>	5</ind>		<dep>	-54.9</dep></entry>
	<entry><ind>	10</ind>	<dep>	-102.3</dep></entry>
	<entry><ind>	15</ind>	<dep>	-145.4</dep></entry>
    </interpolation>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>needle_2</object-name>
    <property>instrumentation/uvpd/perepad</property>
    <interpolation>
  	<entry><ind>	-0.04</ind>	<dep>	-40</dep></entry>
	<entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
        <entry><ind>	0.1</ind>	<dep>	25.4</dep></entry>
        <entry><ind>	0.2</ind>	<dep>	47.6</dep></entry>
        <entry><ind>	0.3</ind>	<dep>	67.4</dep></entry>
        <entry><ind>	0.4</ind>	<dep>	85.9</dep></entry>
	<entry><ind>	0.5</ind>	<dep>	103.3</dep></entry>
	<entry><ind>	0.6</ind>	<dep>	118.9</dep></entry>
    </interpolation>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

</PropertyList>
