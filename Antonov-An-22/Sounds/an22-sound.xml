<?xml version="1.0" encoding="ISO-8859-1"?>
 
<PropertyList>

  <fx>
 
<!-- Engines 1 -4 starting up-->
    <crank>
      <name>engstart1</name>
      <path>Aircraft/Antonov-An-22/Sounds/starter.wav</path>      
      <volume>
        <offset>-0.3</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </crank>
    
    <crank>
      <name>engstart2</name>
      <path>Aircraft/Antonov-An-22/Sounds/starter.wav</path>      
      <volume>
        <offset>-0.3</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>15</delay-sec>
    </crank>
    
    <crank>
      <name>engstart3</name>
      <path>Aircraft/Antonov-An-22/Sounds/starter.wav</path>      
      <volume>
        <offset>-0.3</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>30</delay-sec>
    </crank>
    
    <crank>
      <name>engstart4</name>
      <path>Aircraft/Antonov-An-22/Sounds/starter.wav</path>      
      <volume>
        <offset>-0.3</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>45</delay-sec>
    </crank>
    
<!-- Engines 1 -4 running -->

    <engine>
       <name>engine0</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/running.wav</path>      
           
      <volume>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.0005</factor>
        <min>0.0</min>
        <max>1.0</max>
        <offset>0.0</offset>
      </volume>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.0003</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>14</delay-sec>
    </engine>
    
    <engine>
       <name>engine1</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/running.wav</path>      
          
      <volume>
        <property>/engines/engine[1]/rpm</property>
        <factor>0.0005</factor>
        <min>0.0</min>
        <max>1.0</max>
        <offset>0.0</offset>
      </volume>
      <pitch>
        <property>/engines/engine[1]/rpm</property>
        <factor>0.0003</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>29</delay-sec>
    </engine>
    
    <engine>
       <name>engine2</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/running.wav</path>      
         
      <volume>
        <property>/engines/engine[2]/rpm</property>
        <factor>0.0005</factor>
        <min>0.0</min>
        <max>1.0</max>
        <offset>0.0</offset>
      </volume>
      <pitch>
        <property>/engines/engine[2]/rpm</property>
        <factor>0.0003</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>44</delay-sec>
    </engine>
    
    <engine>
       <name>engine3</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/running.wav</path>      
        
      <volume>
        <property>/engines/engine[3]/rpm</property>
        <factor>0.0005</factor>
        <min>0.0</min>
        <max>1.0</max>
        <offset>0.0</offset>
      </volume>
      <pitch>
        <property>/engines/engine[3]/rpm</property>
        <factor>0.0003</factor>
        <min>0.0</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>59</delay-sec>
    </engine>
    
<!-- Rumbling on runway -->

    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/rumble.wav</path>
      <condition>
          <property>/gear/gear[0]/wow</property>          
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <type>log</type>
        <factor>0.35</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </rumble>
    
    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/rumble.wav</path>
      <condition>        
          <property>/gear/gear[1]/wow</property>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <type>log</type>
        <factor>0.35</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </rumble>
    
    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/rumble.wav</path>
      <condition>          
          <property>/gear/gear[2]/wow</property>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <type>log</type>
        <factor>0.35</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </rumble>

<!-- Gears -->    
    
    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-22/Sounds/gear.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </gear>

    <gear>
     <name>gear-lock</name>
     <path>Aircraft/Antonov-An-22/Sounds/gear-lck.wav</path>
     <condition>
       <greater-than>
         <property>/gear/gear[0]/position-norm</property>
         <value>0.96</value>
       </greater-than>
     </condition>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </gear>

<!-- Touchdown on runway -->    

    <squeal>
      <name>squeal</name>
      <mode>once</mode>
      <path>Aircraft/Antonov-An-22/Sounds/squeal.wav</path>
      <condition>        
          <property>/gear/gear[0]/wow</property>                 
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
	<min>0.7</min>
        <max>1.0</max>
      </volume>      
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>0.5</offset>
	<min>0.9</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </squeal>
    
    <squeal>
      <name>squeal</name>
      <mode>once</mode>
      <path>Aircraft/Antonov-An-22/Sounds/squeal.wav</path>
      <condition>        
          <property>/gear/gear[6]/wow</property>          
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
	<min>0.7</min>
        <max>1.0</max>
      </volume>      
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>0.5</offset>
	<min>0.9</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </squeal>

<!-- Flaps -->

    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-22/Sounds/flaps.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>
        <factor>0.2</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </flap>

<!-- Wind -->
    
    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/wind.wav</path>
      <property>/velocities/airspeed-kt</property>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <min>0.00</min>
        <max>0.25</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>0.3</offset>
        <max>1.0</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </wind>
 
    <stall>
      <name>stall</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/stall.wav</path>
      <property>/sim/alarms/stall-warning</property>
      <volume>
        <property>/sim/alarms/stall-warning</property>
        <max>1.0</max>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </stall>
  
    <door>
      <name>Cargo door</name>
      <path>Aircraft/Antonov-An-22/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.25</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Cargo doorT</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.09</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>

    <door>
      <name>Passenger doorL</name>
      <path>Aircraft/Antonov-An-22/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.22</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Passenger doorLT</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/door_close.wav</path>
      <condition>
        <and>
	<greater-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.06</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Passenger doorR</name>
      <path>Aircraft/Antonov-An-22/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[1]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.22</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Passenger doorRT</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/door_close.wav</path>
      <condition>
        <and>
	<greater-than>
          <property>sim/multiplay/generic/float[1]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[1]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.06</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>

    <rain>
      <name>rain</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/rain_canopy.wav</path>
      <condition>
        <greater-than>
          <property>/environment/metar/rain-norm</property>
          <value>0.2</value>
        </greater-than>
      </condition>
      <volume>
        <property>/environment/metar/rain-norm</property>
        <factor>1.00</factor>
        <offset>0.00</offset>
        <min>0.4</min>
        <max>0.9</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.001</factor>
        <offset>1.0</offset>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </rain>

  </fx>

</PropertyList>
